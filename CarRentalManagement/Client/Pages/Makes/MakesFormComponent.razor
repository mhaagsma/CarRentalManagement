@using CarRentalManagement.Client.Components;

<EditForm Model="@make" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Make: </label>
            <InputText @bind-Value="@make.Name" class="form-control" />
            <ValidationMessage For="@(() => make.Name)" />
        </div>
        </fieldset>
        @if (!Disabled)
        {
            <button type="submit" class="btn btn-success btn-block">
                @ButtonText
            </button>
        }
        <BackToList Target="makes" />
</EditForm>


 

    @code {
        [Parameter]
        public bool Disabled { get; set; } = false; 
        [Parameter] public Make make { get; set; }
        [Parameter] public string ButtonText { get; set; }
        [Parameter] public EventCallback OnValidSubmit { get; set; }
    }
