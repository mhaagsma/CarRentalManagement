@page "/vehicles/edit/{id:int}"

@inject HttpClient _client
@inject NavigationManager _navManager



<h3>Edit Vehicle</h3>

<VehiclesFormComponent ButtonText="Update Vehicle" OnValidSubmit="@EditVehicle" vehicle="vehicle" />

@code {
    [Parameter] public int id { get; set; }
    Vehicle vehicle = new Vehicle();

    protected override async Task OnParametersSetAsync()
    {
        if (_client != null) vehicle = await _client.GetFromJsonAsync<Vehicle>($"{Endpoints.VehiclesEndpoint}/{id}");
    }

    async Task EditVehicle()
    {
        await _client.PutAsJsonAsync($"{Endpoints.VehiclesEndpoint}/{id}", vehicle);
        _navManager.NavigateTo("/vehicles/");
    }
}